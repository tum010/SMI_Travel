<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.smi.travel.datalayer.entity.DaytourExpense" table="daytour_expense" catalog="smitravel">
        <id name="id" type="string">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="daytour" class="com.smi.travel.datalayer.entity.Daytour" fetch="select">
            <column name="daytour_id" not-null="true" />
        </many-to-one>
        <property name="description" type="string">
            <column name="description" />
        </property>
        <property name="amount" type="big_decimal">
            <column name="amount" precision="10"/>
        </property>
        <property name="currency" type="string">
            <column name="currency" length="3" />
        </property>
        <property name="priceType" type="string">
            <column name="price_type" length="1" />
        </property>
    </class>
</hibernate-mapping>
