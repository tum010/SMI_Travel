<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.smi.travel.datalayer.entity.DaytourBookingPrice" table="daytour_booking_price" catalog="smitravel">
        <id name="id" type="string">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="daytourBooking" class="com.smi.travel.datalayer.entity.DaytourBooking" fetch="select">
            <column name="daytour_booking_id" not-null="true" />
        </many-to-one>
        <many-to-one name="MPricecategory" class="com.smi.travel.datalayer.entity.MPricecategory" fetch="select">
            <column name="category_id" />
        </many-to-one>
        <property name="detail" type="string">
            <column name="detail" />
        </property>
        <property name="qty" type="java.lang.Integer">
            <column name="qty" />
        </property>
        <property name="price" type="big_decimal">
            <column name="price" precision="10"/>
        </property>
        <property name="currency" type="string">
            <column name="currency"   length="3"/>
        </property>
    </class>
</hibernate-mapping>
