<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.smi.travel.datalayer.entity.MainMenu" table="main_menu" catalog="smi_uat">
        <id name="id" type="string">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="name" type="string">
            <column name="name" length="50" not-null="true" />
        </property>
        <set name="functions" table="function" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="mainmenu_id" />
            </key>
            <one-to-many class="com.smi.travel.datalayer.entity.Function" />
        </set>
    </class>
</hibernate-mapping>
