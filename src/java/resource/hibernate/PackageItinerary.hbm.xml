<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="com.smi.travel.datalayer.entity.PackageItinerary" table="package_itinerary" catalog="smi_uat">
        <id name="id" type="string">
            <column name="id" />
            <generator class="identity" />
        </id>
        <many-to-one name="packageTour" class="com.smi.travel.datalayer.entity.PackageTour" fetch="select">
            <column name="package_id" not-null="true" />
        </many-to-one>
        <property name="orderNo" type="java.lang.Integer">
            <column name="order_no" />
        </property>
        <property name="time" type="time">
            <column name="time" length="8" />
        </property>
        <property name="detail" type="string">
            <column name="detail" />
        </property>
    </class>
</hibernate-mapping>
